{{#if confirmRepost}}

<div class="user-list-container">
  <i class="fa fa-retweet fa-3x confirm-repost-icon"></i>

  <div class="right-side confirm-repost">
    <p class='confirm-repost-title'>Repost this to your followers?</p>
    <span>
      <a href="#" {{action "repost" true}}>Yes</a>
    </span>
    <span class="dot">&#8729;</span>
    <span>
      <a href="#" {{action "repost" false}}>No</a>
    </span>
  </div>
</div>

{{else}}

<div class="user-list-container">
  {{#if isRepost}}
    <p class="repost">
      <i class="fa fa-retweet repost-icon"></i>
      Reposted by {{post.creator.id}}
    </p>
  {{/if}}
  <img src="https://lh6.googleusercontent.com/-hBbaFeCzpFs/AAAAAAAAAAI/AAAAAAAAANA/r02VbznNRIs/w48-c-h48/photo.jpg">
  <div class="right-side">
    {{#if isRepost}}
      {{#link-to "user.posts" post.creator class="user-link"}}{{post.originalCreator.id}}{{/link-to}}
    {{else}}
      {{#link-to "user.posts" post.creator class="user-link"}}{{post.creator.id}}{{/link-to}}
    {{/if}}
    <p class="post-body">{{post.body}}</p>
    <p>
      <span class="created-at">{{time-delta-in-words post.createdAt}}</span>
      {{#if session.isAuthenticated}}
        {{#unless isOwner}}
          <span class="delete">
            <a href="#" {{action "repostClicked"}}>Repost</a>
          </span>
        {{/unless}}

        {{#if isOwner}}
          <span class="delete">
            <a href="#" {{action "delete"}}>Delete</a>
          </span>
        {{/if}}
      {{/if}}
    </p>
  </div>
</div>

{{/if}}
